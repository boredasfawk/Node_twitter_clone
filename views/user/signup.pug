doctype html
html(lang="en")
  include common/header.pug
  +head("starter MVP")
  body
    header
      include common/navbar.pug
      +navbar()
      div.container
        div.row.align-items-center
          div.col-sm12.offset-md-2.col-md-8
            div.jumbotron
              h2.text-center Sign up
              div.row  
                div.col-sm-12.col-md-12
                  form(action="/signup", method='POST')
                    div.formgroup
                     label.small.mb-1.mt-3 Email: 
                     input(placeholder="Please enter your email", required=true, name="email, type="email, value='').form-control
                     label.small.mb-1.mt-3 Password: 
                     input(placeholder="Please enter your password", required=true, name="password, type="password, value='').form-control
                     button(type="submit").mt-3.btn.btn-primary Sign Up
                     p.mt-2.mb-0
                       | Already have an account? #[a(href="/login") Log in here]
                       .
    include common/footer.pug
    +footer()