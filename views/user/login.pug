doctype html
html(lang="en")
  include ../common/header.pug
  +head("signup starter MVP")
  body
    header
      include ../common/navbar.pug
      +navbar()
      div.container
        div.row
          div.col-sm-12.offset-md-2.col-md-8
            div.jumbotron
              h2.text-center Login 
              div.row  
                div.col-sm-12.col-md-12
                  form(action="/login", method='POST')
                    div.formgroup
                      label.small.mb-1.mt-3 Email: 
                      input(placeholder="Please enter your email", required=true, name="email", type="email", value='').form-control
                      label.small.mb-1.mt-3 Password: 
                      input(placeholder="Please enter your password", required=true, name="password", type="password", value='').form-control
                      button.mt-3.btn.btn-primary(type="submit") Log in
                      p.mt-2.mb-0
                        | Forgot your password? #[a(href="#") Reset here].
                      p.m-0
                        | Dont have an account? #[a(href="/signup") Sign up here!]
                        
    include ../common/footer.pug
    +footer()